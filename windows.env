# Windows Environment Configuration for TappMCP
# Copy this to .env for Windows development

# Platform identification
PLATFORM=windows
OS_VERSION=10.0.26100

# Development settings
NODE_ENV=development
DEVELOPMENT_MODE=true

# Windows-specific paths
USERPROFILE=%USERPROFILE%
APPDATA=%APPDATA%
LOCALAPPDATA=%LOCALAPPDATA%

# PowerShell settings
POWERSHELL_EXECUTION_POLICY=Bypass
POWERSHELL_PROFILE=$PROFILE

# Git settings for Windows
GIT_EDITOR=code
GIT_PAGER=less

# Node.js settings
NODE_OPTIONS=--max-old-space-size=4096
NPM_CONFIG_CACHE=%LOCALAPPDATA%\npm-cache

# TypeScript settings
TSC_NONPOLLING_WATCHER=true

# AI Tools configuration
CURSOR_CONFIG=.cursorrules
CLAUDE_SYSTEM_PROMPT=docs/configuration/claude-system-prompt.md

# Development tools
ESLINT_CACHE=true
PRETTIER_CACHE=true

# Windows-specific development
WINDOWS_TERMINAL=true
VSCODE_INTEGRATED_TERMINAL=true
