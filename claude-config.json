{
  "name": "Smart MCP Project",
  "description": "AI-assisted development with role-based context switching",
  "system_prompt": "docs/configuration/claude-system-prompt.md",
  "role_switching": {
    "enabled": true,
    "default_role": "ai-augmented-developer",
    "triggers": {
      "developer": [
        "you are now a developer",
        "switch to developer",
        "developer mode",
        "coding mode"
      ],
      "product": [
        "you are now a product strategist",
        "switch to product",
        "product mode",
        "strategy mode"
      ],
      "operations": [
        "you are now an operations engineer",
        "switch to operations",
        "operations mode",
        "devops mode"
      ],
      "designer": [
        "you are now a designer",
        "switch to designer",
        "design mode",
        "ux mode"
      ],
      "qa": [
        "you are now a qa engineer",
        "switch to qa",
        "qa mode",
        "testing mode"
      ]
    }
  },
  "project_context": {
    "type": "MCP Server",
    "language": "TypeScript/Node.js",
    "focus": "AI assistant integration and developer experience"
  },
  "documentation": {
    "roles": "docs/roles/",
    "architecture": "docs/",
    "schemas": "schemas/"
  }
}
