{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "globals": {
    "Console": "readonly",
    "NodeJS": "readonly"
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "caughtErrorsIgnorePattern": "^_"
    }],
    "no-console": "off",
    "no-undef": "warn",
    "no-case-declarations": "warn",
    "no-unreachable": "warn",
    "no-useless-catch": "warn",
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "coverage/",
    "*.js",
    "*.d.ts",
    "scripts/",
    "tests/",
    "dashboard-v2/"
  ]
}
